<Window x:Class="WPF_Kiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:WPF_Kiosk="clr-namespace:WPF_Kiosk"
        xmlns:WPF_Kiosk_Behavior="clr-namespace:WPF_Kiosk.CommandBehavior"
        xmlns:i ="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="Manual"
        Left="0" Top="0"
        WPF_Kiosk_Behavior:CommandBehavior.Event="SizeChanged"
        WPF_Kiosk_Behavior:CommandBehavior.Command="{Binding WindowSizeEvent}"
        >

    <!--WindowStyle="None" AllowsTransparency="True"-->
    
    
    <Window.DataContext>
        <WPF_Kiosk:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <!--메인화면-->
        <Grid Width="{Binding WindowWidth}" Height="{Binding WindowHight}" Visibility="Visible">

            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="0.9*"/>
            </Grid.RowDefinitions>

            <TextBox Grid.Row="0" Text="asdfasdfsadf"/>
            
            <!--KioskCategory-->
            <ItemsControl Grid.Row="1" ItemsSource="{Binding Categorys}">
                <!--템플릿 외형-->
                <ItemsControl.Template>
                    <ControlTemplate TargetType="{x:Type ItemsControl}">
                        <StackPanel Orientation="Horizontal">
                            <Button Width="100" Content="&lt;" HorizontalAlignment="Center" VerticalAlignment="Center" Height="{Binding CategoryHight}" Command="{Binding CategoryClkLeft}"/>
                            <ItemsPresenter/>
                            <Button Width="100" Content="&gt;" HorizontalAlignment="Center" VerticalAlignment="Center" Height="{Binding CategoryHight}" Command="{Binding CategoryClkRight}"/>
                        </StackPanel>
                    </ControlTemplate>
                </ItemsControl.Template>
                <!--트리거-->
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CategoryDisplay}" Value="True">
                                <Setter Property="FrameworkElement.Visibility" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CategoryDisplay}" Value="False">
                                <Setter Property="FrameworkElement.Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <!--데이터 외형-->
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}, AncestorLevel=1}, Path=DataContext.CategoryHight}" Background="Blue" Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}, AncestorLevel=1}, Path=DataContext.CategoryWidth}">
                            <Border Margin="10px" Background="Aqua">
                                <Button Content="{Binding CategoryName}" Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}, AncestorLevel=1}, Path=DataContext.CategoryClick}"
                                        CommandParameter="{Binding CategoryName}"/>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <!--패널 정렬-->
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

            <!--KioskGoods-->
            <ItemsControl Grid.Row="2" ItemsSource="{Binding GoodsItems}">
                <!--템플릿 외형-->
                <ItemsControl.Template>
                    <ControlTemplate TargetType="{x:Type ItemsControl}">
                        <ItemsPresenter/>
                    </ControlTemplate>
                </ItemsControl.Template>
                <!--트리거-->
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding GoodsDisplay}" Value="True">
                                <Setter Property="FrameworkElement.Visibility" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding GoodsDisplay}" Value="False">
                                <Setter Property="FrameworkElement.Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <!--데이터 외형-->
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}, AncestorLevel=1}, Path=DataContext.GoodsItemsHight}" Background="Red" Width="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}, AncestorLevel=1}, Path=DataContext.GoodsItemsWidth}">
                            <Border Margin="10px" Background="Aqua">
                                <StackPanel>
                                    <Rectangle Fill="AliceBlue" Margin="10px"/>

                                    <TextBlock Text="{Binding GoodsName}"/>
                                    <TextBlock Text="line2"/>
                                    <TextBlock Text="$Price"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <!--패널 정렬-->
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

            <!--KioskGoodsShortDisplay-->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" Width="70" Height="{Binding GoodsShortDisplayHight}" HorizontalAlignment="Left" VerticalAlignment="Center" Content="&lt;" Command="{Binding GoodsPageClickLeft}" Margin="30,0,0,0"/>

                <ItemsControl Grid.Column="1" HorizontalAlignment="Center" ItemsSource="{Binding GoodsShortDisplayBtns}">
                    <!--템플릿 외형-->
                    <ItemsControl.Template>
                        <ControlTemplate TargetType="{x:Type ItemsControl}">
                            <ItemsPresenter/>
                        </ControlTemplate>
                    </ItemsControl.Template>

                    <!--데이터 외형-->
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="30" Height="30" Background="Aqua" Margin="10,0,10,0">
                                <RadioButton Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}, AncestorLevel=1}, Path=DataContext.OnEvent}"
                        CommandParameter="{Binding BtnNum}" IsChecked="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}, AncestorLevel=1}, Path=DataContext.GoodsShortDisplayBtnState}">
                                    <RadioButton.Template>
                                        <ControlTemplate TargetType="{x:Type RadioButton}">
                                            <Ellipse Stroke="Black">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}, AncestorLevel=1}, Path=DataContext.GoodsShortDisplayBtnState}" Value="False">
                                                                <!--데이터외형변경-->
                                                                <Setter Property="Fill" Value="fram"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                        </ControlTemplate>
                                    </RadioButton.Template>
                                </RadioButton>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <!--패널 정렬-->
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <Button Grid.Column="2" Width="70" Height="{Binding GoodsShortDisplayHight}" HorizontalAlignment="Right" VerticalAlignment="Center" Content="&gt;" Command="{Binding GoodsPageClickRight}" Margin="0, 0, 30, 0"/>
            </Grid>
                
            <TextBox Grid.Row="4" Text="asdfasdfsadf"/>
        </Grid>

        <!--대기화면-->
        <!--<Grid Width="{Binding WindowWidth}" Height="{Binding WindowHight}" Background="Blue" x:Name="KioskLock" Visibility="{Binding KioskLockVisibility, Converter={StaticResource VisibleConverter}}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseUp" SourceObject="{Binding ElementName=KioskLock}">
                    <i:InvokeCommandAction Command="{Binding KioskLockMouseUp}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            
            <Button Grid.Column="1" Grid.Row="1" Content="Touch to order" x:Name="KioskLockBtn" FontSize="48" Command="{Binding KioskLockBtnClick}">

                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>-->
    </Grid>
    
</Window>
