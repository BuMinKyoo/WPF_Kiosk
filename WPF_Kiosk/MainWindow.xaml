        <!--<Grid Width="{Binding WindowWidth}" Height="{Binding WindowHight}" Background="#80000000">
            <Grid Width="{Binding GoodsDetailGridWidth}"
                  Height="{Binding GoodsDetailGridHight}"
                  Background="White">
            </Grid>
        </Grid>-->
        
