<UserControl x:Class="WPF_Kiosk.View.MainDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Kiosk.View"
             xmlns:localV="clr-namespace:WPF_Kiosk.View.MainDisplayV"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid 
        Visibility="{Binding BlMainDisplayVis, Converter={StaticResource VisibleConverter}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.9*"/>
        </Grid.RowDefinitions>

        <!-- MainCategory-->
        <localV:MainCategoryDisplay Grid.Row="0"/>

        <!--MainGoods-->
        <localV:MainGoodsDisplay Grid.Row="1"/>

        <!--MainGoodsQuickBtn-->
        <localV:MainGoodsQuickBtnDisplay Grid.Row="2"/>

        <!--MainGoodsCart-->
        <localV:MainGoodsCartDisplay Grid.Row="3"/>
    </Grid>
</UserControl>
